[
  {
    "table_name": "表格清单\n\nDocuMind 飞书多维",
    "table_purpose": "统一管理所有插件的字段映射配置，实现一次配置、所有插件共享。\n\n**核心价值**：\n- ✅ 所有插件从这张表读取字段映射\n- ✅ 字段变更时只需更新一处\n- ✅ 支持字段ID和字段名称两种方式\n- ✅ 支持多环境配置",
    "fields": [
      {
        "field_name": "映射ID",
        "field_type": "自动编号",
        "required": true,
        "description": "自动生成的唯一ID",
        "example": "`MAP-001`"
      },
      {
        "field_name": "目标表名",
        "field_type": "单选",
        "required": true,
        "description": "要映射的表名",
        "example": "`服务表`"
      },
      {
        "field_name": "目标表ID",
        "field_type": "单行文本",
        "required": false,
        "description": "表的ID（可选，优先使用）",
        "example": "`tblXXXXXXX`"
      },
      {
        "field_name": "逻辑字段名",
        "field_type": "单行文本",
        "required": true,
        "description": "插件内部使用的字段名（英文）",
        "example": "`name`"
      },
      {
        "field_name": "实际字段名",
        "field_type": "单行文本",
        "required": true,
        "description": "飞书表格中的实际字段名（中文）",
        "example": "`服务名称`"
      },
      {
        "field_name": "字段ID",
        "field_type": "单行文本",
        "required": false,
        "description": "字段的ID（可选，优先使用）",
        "example": "`fldXXXXXXX`"
      },
      {
        "field_name": "字段类型",
        "field_type": "单选",
        "required": true,
        "description": "字段的数据类型",
        "example": "`text` / `number` / `select` / `link`"
      },
      {
        "field_name": "是否必填",
        "field_type": "复选框",
        "required": true,
        "description": "该字段是否必填",
        "example": "✅ / ❌"
      },
      {
        "field_name": "默认值",
        "field_type": "单行文本",
        "required": false,
        "description": "字段的默认值",
        "example": "`设计中`"
      },
      {
        "field_name": "字段说明",
        "field_type": "多行文本",
        "required": false,
        "description": "字段的用途说明",
        "example": "`服务的中文名称，用于显示`"
      },
      {
        "field_name": "环境",
        "field_type": "单选",
        "required": false,
        "description": "适用环境",
        "example": "`全部` / `开发` / `测试` / `生产`"
      },
      {
        "field_name": "状态",
        "field_type": "单选",
        "required": true,
        "description": "映射状态",
        "example": "`启用` / `禁用`"
      },
      {
        "field_name": "创建时间",
        "field_type": "创建时间",
        "required": true,
        "description": "自动记录",
        "example": "`2025-01-15`"
      },
      {
        "field_name": "更新时间",
        "field_type": "最后编辑时间",
        "required": true,
        "description": "自动记录",
        "example": "`2025-01-20`"
      }
    ],
    "field_options": {}
  },
